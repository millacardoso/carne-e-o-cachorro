<fable>
  <config font-family="Arial" />

  <!-- Página 1 - Título -->
  <page id="pagina1" bg_gradient="linear-gradient(90deg, #FFA07A, #FF7043, #FF5722)">
    <agent id="titulo" x="100" y="60" text="FÁBULA: O GATO E O PEIXE"
      bg_color="#4CAF50" color="#ffffff"
      animation="hover-bg-color-[#388E3C] hover-color-[#FFFF00]" />
    <agent id="botao1" x="150" y="200" text="Avançar"
      bg_color="#388E3C" color="#FFFFFF"
      goto="pagina2"
      animation="hover-bg-color-[#2E7D32] hover-color-[#FFFF00]" />
  </page>

  <!-- Página 2 -->
  <page id="pagina2" bg_gradient="linear-gradient(90deg, #A5D6A7, #81C784, #66BB6A)">
    <agent id="texto1" x="30" y="100" text="Era uma vez um gatinho, que ia atravessando um rio; levava na boca um suculento peixe."
      bg_color="#A5D6A7" color="#000000"
      animation="hover-bg-color-[#81C784] hover-color-[#000000]" />
    <agent id="botao2" x="150" y="200" text="Avançar"
      bg_color="#388E3C" color="#FFFFFF"
      goto="pagina3"
      animation="hover-bg-color-[#2E7D32] hover-color-[#FFFF00]" />
  </page>

  <!-- Página 3 -->
  <page id="pagina3" bg_gradient="linear-gradient(90deg, #C8E6C9, #A5D6A7, #81C784)">
    <agent id="texto2" x="30" y="100" text="Porém, viu na água do rio a sombra de um peixe, que era muito maior."
      bg_color="#C8E6C9" color="#000000"
      animation="hover-bg-color-[#A5D6A7] hover-color-[#000000]" />
    <agent id="botao3" x="150" y="200" text="Avançar"
      bg_color="#388E3C" color="#FFFFFF"
      goto="pagina4"
      animation="hover-bg-color-[#2E7D32] hover-color-[#FFFF00]" />
  </page>

  <!-- Página 4 -->
  <page id="pagina4" bg_gradient="linear-gradient(90deg, #E8F5E9, #C8E6C9, #A5D6A7)">
    <agent id="texto3" x="30" y="100" text="Prontamente ele largou seu peixe e mergulhou no rio para pegar o maior."
      bg_color="#E8F5E9" color="#000000"
      animation="hover-bg-color-[#C8E6C9] hover-color-[#000000]" />
    <agent id="botao4" x="150" y="200" text="Avançar"
      bg_color="#388E3C" color="#FFFFFF"
      goto="pagina5"
      animation="hover-bg-color-[#2E7D32] hover-color-[#FFFF00]" />
  </page>

  <!-- Página 5 -->
  <page id="pagina5" bg_gradient="linear-gradient(90deg, #F1F8E9, #DCEDC8, #C8E6C9)">
    <agent id="texto4" x="30" y="100" text="Nadou, nadou e não achou nada, e ainda perdeu o peixe que levava."
      bg_color="#F1F8E9" color="#000000"
      animation="hover-bg-color-[#DCEDC8] hover-color-[#000000]" />
    <agent id="botao5" x="150" y="200" text="Avançar"
      bg_color="#388E3C" color="#FFFFFF"
      goto="pagina6"
      animation="hover-bg-color-[#2E7D32] hover-color-[#FFFF00]" />
  </page>

  
  <page id="pagina6" bg_gradient="linear-gradient(90deg, #FFEB3B, #FDD835, #FBC02D)">
    <agent id="moral" x="30" y="120" text="Moral da história: Nunca deixes o certo pelo duvidoso."
      bg_color="#FFEB3B" color="#000000"
      animation="hover-bg-color-[#FDD835] hover-color-[#D32F2F]" />
    <agent id="botaoFinal" x="150" y="200" text="Fim"
      bg_color="#FBC02D" color="#000000"
      animation="hover-bg-color-[#F9A825] hover-color-[#FFFFFF]" />
  </page>
</fable>